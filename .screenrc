#use visual bell
vbell on
# set a big scrolling buffer
defscrollback 100000
# Set the caption on the bottom line
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H - %LD %d %LM - %c"
shelltitle "$ |bash"
startup_message off
# screen environment setup
screen -t git 
screen -t psql
screen -t svc
screen -t logs
screen -t testrunner
screen -t rconsole
screen -t seescope
screen -t spec
screen -t helper
