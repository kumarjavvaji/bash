#use visual bell
vbell on
# set a big scrolling buffer
defscrollback 100000
# Set the caption on the bottom line
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H - %LD %d %LM - %c"
shelltitle "$ |bash"
startup_message off
# screen environment setup
screen -t git 
screen -t spec
screen -t runner
screen -t irb

defshell -bash
